<?xml version="1.0" encoding="UTF-8"?>
<binding:binding id="somfytahoma"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:binding="http://eclipse.org/smarthome/schemas/binding/v1.0.0"
        xsi:schemaLocation="http://eclipse.org/smarthome/schemas/binding/v1.0.0 http://eclipse.org/smarthome/schemas/binding-1.0.0.xsd">

    <name>Somfy Tahoma Binding</name>
    <description>Control Tahoma devices - rollershutters and actiongroups.</description>
    <author>Ondrej Pecta</author>
    
    <service-id>org.openhab.somfytahoma</service-id>

    <config-description>
        <parameter name="refresh" type="integer">
            <label>Refresh interval</label>
            <description>Data refresh interval in milliseconds.</description>
            <default>60000</default>
        </parameter>
        <parameter name="email" type="text" required="true">
            <label>Somfy Tahoma email (cloud login).</label>
        </parameter>
        <parameter name="password" type="text" required="true">
            <context>password</context>
            <label>Somfy Tahoma password (cloud password).</label>
        </parameter>
    </config-description>
</binding:binding>